@import './reset'
@import './layout'
@import './global'

.index
  font-size 18px
  position relative
  color #383838
  height 80vh
  overflow hidden
  padding-top 20vw
  border-box()

  &__tip
    text-center()
    padding-top 1em
    font-size 12px
    color orange

  &__logo
    text-center()
    margin-bottom 13vw

    img
      height 20vw
      width auto

  &__button
    padding 0 11vw

  &__footer
    position absolute
    bottom 10px
    left 0
    right 0
    text-center()
    font-size 12px

  &__form
    padding 0 12vw
    margin-bottom 7vw

    li
      ffc-row(space-between)
      border-bottom 1PX solid #EEEEEE
      height 2em
      line-height 2em
      margin-bottom 0.5em

      div
        ffc-row()

      img
        width 1em
        height auto
        margin-right 1em

      input
        flex 1
        font-size 16px

@media only screen and (min-width 768px)
  .index
    padding-top 80px
    height 100%

    &__logo
      margin-bottom 96px

      img
        height 80px

    &__button
      padding 0 92px

    &__footer
      position absolute
      bottom 20px
      left 0
      right 0
      text-center()
      font-size 12px

    &__form
      padding 0 92px
      margin-bottom 55px