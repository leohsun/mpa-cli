*
  word-wrap break-word
  line-height 100%
  // touch-action manipulation

html, body
  width 100vw
  overflow-x hidden
  color #525252
  position relative

html, body, h1, h2, h3, h4, h5, h6, hr, p, iframe, dl, dt, dd, ul, ol, li, pre, form, button, input, textarea, th, td, fieldset
  margin 0
  padding 0
  font-weight normal

ul, ol, dl
  list-style-type none

html
  font-family sans-serif
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%

address, caption, cite, code, dfn, em, th, var
  font-style normal
  font-weight 400

input, button, textarea, select, optgroup, option
  font-family inherit
  font-size inherit
  font-style inherit
  font-weight inherit

input, button, select
  overflow visible
  vertical-align middle
  outline none
  background none
  border none

  &:active
    background none

body, th, td, button, input, select, textarea
  font-family 'Microsoft Yahei', 'Hiragino Sans GB', 'Helvetica Neue', Helvetica, tahoma, arial, Verdana, sans-serif, 'WenQuanYi Micro Hei', '\5B8B\4F53'
  font-size 12px
  color #333333
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
  line-height 1.6

h1, h2, h3, h4, h5, h6
  font-size 100%

a
  text-decoration none
  cursor pointer
  color inherit

  &:visited
    text-decoration none

  &:hover
    text-decoration none
    outline none

textarea
  outline none

  /* img */
  img
    border none
    vertical-align middle

  a img, img
    -ms-interpolation-mode bicubic

  .img-responsive
    max-width 100%
    height auto

.cl::after, .clearfix::after
  content '.'
  display block
  height 0
  clear both
  visibility hidden

.cl, .clearfix
  zoom 1

i
  font-style normal

.loading
  position fixed
  left 0
  top 0
  right 0
  bottom 0
  z-index 10
  background rgba(0, 0, 0, 0.6)

  &__spinner
    position absolute
    left 50%
    top 50%
    width 8px
    height 80px
    background-color #00B285
    border-radius 2px

    &:before, &:after
      width 8px
      height 80px
      background-color #00B285
      border-radius 2px

    &:before, &:after
      content ''
      position absolute
      display block
      top 0

    &:before
      left -10px

    &:after
      left 10px

    @keyframes bounce-bottom
      0%
        height 5px
        margin-top 15px

      50%
        height 20px
        margin-top 0

      100%
        height 5px
        margin-top 15px

    &-bounce-bottom
      -webkit-animation bounce-bottom 0.6s ease 0.1s infinite
      animation bounce-bottom 0.6s ease 0.1s infinite

    &-bounce-bottom:before, &-bounce-bottom:after
      top auto
      bottom 0

    &-bounce-bottom:before
      -webkit-animation bounce-bottom 0.6s ease 0s infinite
      animation bounce-bottom 0.6s ease 0s infinite

    &-bounce-bottom:after
      -webkit-animation bounce-bottom 0.6s ease 0.2s infinite
      animation bounce-bottom 0.6s ease 0.2s infinite

.row
  &::after
    @extend .cl::after

[class*='col-']
  float left

/* For desktop: */
.col-1
  width 8.33%

.col-2
  width 16.66%

.col-3
  width 25%

.col-4
  width 33.33%

.col-5
  width 41.66%

.col-6
  width 50%

.col-7
  width 58.33%

.col-8
  width 66.66%

.col-9
  width 75%

.col-10
  width 83.33%

.col-11
  width 91.66%

.col-12
  width 100%

.color-white
  color white !important

.show-sm
  display none

.hide-sm
  display block

@media only screen and (max-width 768px)
  /* For mobile phones: */
  [class*='col-']
    width 100%

  body
    user-select none

  .show-sm
    display block !important

  .show-lg
    display none !important

  .hide-sm
    display none !important

@media only screen and (min-width 768px)
  html
    height 100%
    background-color #efefef

  body
    width 768px
    margin 0 auto
    min-height 100vh
    background-color #fff